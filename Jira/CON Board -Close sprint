import groovy.json.JsonBuilder

    def webhookUrl = 'https://hooks.slack.com/services/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'

    def msg = [
        text: "The current sprint has now ended"
    ]

    def postBody = new JsonBuilder(msg).toString()

    def response = post(webhookUrl)
        .header('Content-Type', 'application/json')
        .body(postBody)
        .asString()

    if (response.status != 200) {
        log.error("Failed to send Slack notification: ${response.status} - ${response.body}")
    }
